<div class="container">
  <div class="row">
    <div class="col-lg-3"> </div> <!-- left page spacing using columns-->

    <div class="col-lg-6"> <!-- main content space on page using columns-->
      <div class="well">
        <fieldset>
          <legend>Login</legend>

          <%= form_for :session, url: login_path, html: { class: "bs-example form-horizontal" } do |f| %>

              <div class="form-group">
                <div class="col-lg-2">
          	      <%= f.label :email, "Email:", :input_html => { :class => "control-label"} %>
                </div>
                <div class="col-lg-10">
          	      <%= f.email_field :email, :input_html => { :class => "form-control"} %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-lg-2">
          	      <%= f.label :password, "Password", :input_html => { :class => "control-label"} %>
                </div>
                <div class="col-lg-10">
          	      <%= f.password_field :password, :input_html => { :class => "form-control" } %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
          	     <%= f.submit "Login",  :id => "login", :class => "btn btn-info" %>
                </div>
              </div>

          <% end %>

        </fieldset>

      </div><!--end of class="well" -->
    </div><!-- end of class="col-lg-6" -->
    <div class="col-lg-3"></div><!-- end of class="col-lg-3" -->
  </div>  <!-- end of class="row"-->
</div><!-- end of class="container"-->
