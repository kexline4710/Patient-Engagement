<div class="container">
  <div class="row">
    <!--  insert navbar -->

  </div> <!-- closes row -->



  <div class="row">
  <!-- main body 2 columns-->
    <div class="col-md-8">
      <h1>Welcome</h1>
      <div>
        <table>
          <% if current_user.answers_unviewed[0] %>
            <tr>
              <td>
                <%= link_to 'You have answered questions!', participant_answers_path(current_user.authenticity_token), html = { :class => "btn btn-default btn-lg btn-block"}%>
              </td>
            </tr>
          <% end %>
          <% if current_user.pending_questions > 0 %>
            <tr>
              <td>
                Pending Questions
                <%= current_user.pending_questions %>
            </tr>
          <% end %>
        </table>
      </div>

      <h2>Recently Asked Questions</h2>
      <% if @questions.length == 0 %>
        <div>These are the instructions for you to ask a question.</div>
      <% else %>
        <% @questions.each do |question| %>

          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title"><%= question.title %></h3>
            </div><!-- end of class="panel-heading" -->

            <div class="panel-body"><%= question.content %></div>
            <% if question.answer %>
              <div class="panel-body"><%= question.answer.content %> - <%= question.coordinator_name %></div>
            <% end %>

          </div><!-- end of class="panel panel-success" -->

        <% end %>
      <% end %>
    </div> <!-- closes class="col-md-8" -->

    <div class="col-md-4">
      <!-- right hand sidebar butttons-->

      <%= link_to 'Ask a Question', new_participant_question_path(current_user.authenticity_token), html = { :class => "btn btn-primary btn-lg btn-block"}%>

       <%= link_to 'Your Questions', participant_questions_path(current_user.authenticity_token), html = { :class => "btn btn-default btn-lg btn-block"}%>

       <%= link_to 'All Questions', questions_all_path, html = { :class => "btn btn-default btn-lg btn-block"}%>

       <div class="well">
        <fieldset>
          <legend>How are you feeling?</legend>

          <%= form_for :feeling, url: {action: "create"}, html: { class: "bs-example form-horizontal" } do |f| %>

            <% @feelings.each do |feeling_option| %>

              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <%= f.radio_button :feeling_id, feeling_option.id%>
                  <%= f.label :feeling_id, feeling_option.emotion %>
                </div>
              </div>

            <% end %>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                 <%= f.submit "Submit",  :id => "login", :class => "btn btn-info" %>
                </div>
              </div>
          <% end %>

        </fieldset>

      </div><!--end of class="well" -->

    </div> <!--  closes sidebar div -->
  </div> <!-- closes row -->




  <!-- insert footer -->

  </div> <!-- closes row-->
</div> <!-- closes container-->


