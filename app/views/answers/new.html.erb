<div class="container">
  <div class="row">
    <div class="col-lg-3"> </div> <!-- left page spacing using columns-->

    <div class="col-lg-6"> <!-- main content space on page using columns-->
      <div class="well">
        <fieldset>
          <legend>Answer Question</legend>
          <div>Subject: <%= @participant.subject_number %></div>
					<div><%= @question.title %></div>
					<div><%= @question.content %></div>

          <%= form_for :answer, url: {action: "create"}, html: { class: "bs-example form-horizontal" } do |f| %>

              <div class="form-group">
                <div class="col-lg-2">
          	      <%= f.label :content, :input_html => { :class => "control-label"} %>
                </div>
                <div class="col-lg-10">
          	      <%= f.text_area :content, :input_html => { :class => "form-control"} %>
          	      <%= hidden_field_tag 'question_id', @question.id %>
                </div>
              </div>

              <div class="form-group">
                <% if @question.private %>
                  <div class="col-lg-11 col-lg-offset-1">
                        The subject has opted for this question to remain private
                  </div>
                <% else %>
              </div>

              <div class="form-group">
                <div class="col-lg-12">
                  <%= f.radio_button :private, true%>
                  <%= f.label :private, "Would you like this question to be private and not be shared with the test group" %>
                </div>
              </div>
                <% end %>

              <div class="form-group">
                <div class="col-lg-11 col-lg-offset-1">
          	     <%= f.submit "Submit",  :id => "login", :class => "btn btn-info" %>
                </div>
              </div>

          <% end %>

        </fieldset>

      </div><!--end of class="well" -->
    </div><!-- end of class="col-lg-6" -->
    <div class="col-lg-3"></div><!-- end of class="col-lg-3" -->
  </div>  <!-- end of class="row"-->
</div><!-- end of class="container"