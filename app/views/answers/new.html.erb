<h1>New Answer</h1>

<div>Subject: <%= @participant.subject_number %></div>
<div><%= @question.title %></div>
<div><%= @question.content %></div>

<%= form_for :answer, url: {action: "create"} do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= hidden_field_tag 'question_id', @question.id %>
  <%= f.submit "Submit"%>
<% end %>