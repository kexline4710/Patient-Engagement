<div class="container">
  <div class="row">
    <!--  insert navbar -->
  </div> <!-- closes row -->

  <div class="row">
  <!-- main body 2 columns-->
    <div class="col-md-8">
      <h1>Welcome</h1>

      <% if @participants %>
      	<h2>Participant Questions</h2>
        <table class="table">
          <tr>
            <th>Subject</th>
            <th>Title</th>
            <th></th>
          </tr>
          <% @participants.each do |participant| %>
          	<% if participant.questions %>
  	        	<% participant.questions.each do |question| %>
  		          <div>
                  <tr>
                    <td><%= participant.subject_number %></td>
    		            <td><%= question.title %></td>
                    <td>
                    <% if !question.answer %>
                      <%= form_for( :answer , url: new_answer_path, :html => {:method => :get}) do |f| %>
                        <%= hidden_field_tag 'question', question.id %>
                        <%= f.submit "Answer"%>
                      <% end %>
                    <% end %>
                    </td>
                  </tr>
  		        	</div> <!-- closes question and answer block-->
  		        <% end %>
            <% end %>
          <% end %>
        </table>
      <% end %>
    </div> <!-- closes content div-->

    <!-- <div class="col-md-4"> -->
      <!-- right hand sidebar butttons-->
      <!-- <a href="/answer/new">Ask a question</a> -->
    <!-- </div>  closes sidebar div -->
  </div> <!-- closes row -->



  <div class="row">
    <%= form_for :session, url: logout_path do |f| %>
      <%= f.submit "Logout" %>
    <% end %>
  <!-- insert footer -->

  </div> <!-- closes row-->
</div> <!-- closes container-->


